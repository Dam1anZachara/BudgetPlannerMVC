@model BudgetPlannerMVC.Application.ViewModels.BudgetUserView.NewBudgetUserVm

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        @{
            var i = 1;
            var j = 1;
        }
        @foreach (var item in Model.ContactDetails)
        {
            if (item.ContactDetailTypeId == 1)
            {
                <dt class="col-sm-2">
                    Mail address @i
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ContactDetailInformation)
                </dd>
                i++;
            }
            else if (item.ContactDetailTypeId == 2)
            {
                <dt class="col-sm-2">
                    Phone number @j
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ContactDetailInformation)
                </dd>
                j++;
            }
            else
            {
                <dt class="col-sm-2">
                    Contact
                </dt>
                <dd class="col-sm-10">
                    No contact
                </dd>
            }
        }
        @foreach (var item in Model.Addresses)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Street)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Street)
            </dd>
            <dt class="col-sm-2">
                Building Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.BuildingNumber)
            </dd>
            <dt class="col-sm-2">
                Flat Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.FlatNumber)
            </dd>
            <dt class="col-sm-2">
                Zip Code
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.ZipCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Country)
            </dd>
        }
    </dl>
</div>
<div style="margin-bottom:60px">
    @Html.ActionLink("Edit", "EditBudgetUser", new { id = Model.Id }, new { @class = "btn btn-info" })
    <a class="btn btn-dark" asp-action="Index">Back to Budget Users</a>
</div>
