@using System.Globalization
@model BudgetPlannerMVC.Application.ViewModels.AmountView.NewAmountVm

@{
    ViewData["Title"] = "AddAmount";
}

<h1 class="display-4">Add Amount</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAmount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
@*                <input asp-for="Date" value="@DateTime.Now" type="datetime" class="form-control" />*@
                <div class="input-group date" id="datepickerAdd">
                    <input type="text" asp-for="Date" class="form-control" id="startDate" value="@DateTime.Now.ToString("dd.MM.yyyy HH:mm")">
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control"/>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Type of Amount</label>
                @Html.DropDownListFor(model => model.NameOfType, new SelectList(ViewBag.list), new { @class = "btn btn-outline-dark dropdown-toggle" })
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(function () {
            $('#datepickerAdd').datepicker({ format: 'dd.mm.yyyy' });
        });
    </script>
}
