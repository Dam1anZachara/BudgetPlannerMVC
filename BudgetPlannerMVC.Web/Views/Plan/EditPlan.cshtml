@model BudgetPlannerMVC.Application.ViewModels.PlanView.NewPlanVm

@{
    ViewData["Title"] = "EditPlan";
}

<h1 class="display-4">Edit Plan</h1>

<hr />
<div class="row" style="margin-bottom:60px">
    <div class="col-md-4">
        <form asp-action="EditPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="hidden" class="form-check-input" asp-for="IsActive" />
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <div class="input-group date" id="datepickerStart">
                    <input type="text" asp-for="DateStart" class="form-control" >
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <div class="input-group date" id="datepickerEnd">
                    <input type="text" asp-for="DateEnd" class="form-control" >
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Back to Plans</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(function () {
        $('#datepickerStart').datepicker({ format: 'dd.mm.yyyy' });
        $('#datepickerEnd').datepicker({ format: 'dd.mm.yyyy' });
    });
</script>
}