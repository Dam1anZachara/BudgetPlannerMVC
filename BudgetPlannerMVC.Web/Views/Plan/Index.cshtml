@model BudgetPlannerMVC.Application.ViewModels.PlanView.ListPlanForListVm

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Budget Plan</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" style="margin-top: 10px">Add Plan</a>
</p>
<form asp-action="Index" asp-controller="Amount" method="post">
    <div class="form-inline justify-content-start">
        <div class="d-flex" style="margin:10px 20px 20px 0px">
            <div class="d-flex">
                <input class="form-control form-rounded" type="text" asp-for="SearchString" name="searchString" id="searchString" placeholder="Search" />
            </div>
            <div class="d-flex">
                <input class="btn btn-outline-dark ml-2" type="submit" value="Search" />
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date Start
                    </th>
                    <th>
                        Date End
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Active
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Plans)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                @Html.ActionLink("Active", "Active", new { id = item.Id }, new { @class = "btn btn-success" })
                            }
                            else
                                @Html.ActionLink("Active", "Inactive", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
            <table>
                <tr>
                        @for(int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                        {
                            <td>
                                
                                @if (i != Model.CurrentPage)
                                {
                                    <a class="badge badge-dark" href="javascript:PagerClick(@i)">@i</a>
                                }
                                else
                                {
                                    <span class="badge badge-outline-dark">@i</span>
                                }
                            </td>
                        }
                </tr>
            </table>
            <input type="hidden" name="pageNo" id="pageNo" />
            <input type="hidden" name="pageSize" id="pageSize" value="2" />
        </div>
</form>
@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index)
        {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}
    
