@model BudgetPlannerMVC.Application.ViewModels.PlanView.NewPlanVm

@{
    ViewData["Title"] = "AddPlan";
}

<h1 class="display-4">Add Plan</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Start Date</label>
                @*<input asp-for="DateStart" class="form-control" />*@
                <div class="input-group date" id="datepickerStart">
                    <input type="text" asp-for="DateStart" class="form-control" id="dateStart" value="@DateTime.Now.ToString("dd.MM.yyyy")"> @*id i value chyba nie potrzebne*@
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">End Date</label>
                @*<input asp-for="DateEnd" class="form-control" />*@
                <div class="input-group date" id="datepickerEnd">
                    <input type="text" asp-for="DateEnd" class="form-control" id="dateEnd" value="@DateTime.Now.ToString("dd.MM.yyyy")">
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#datepickerStart').datepicker({ format: 'dd.mm.yyyy' });
            $('#datepickerEnd').datepicker({ format: 'dd.mm.yyyy' });
        });
    </script>
}


